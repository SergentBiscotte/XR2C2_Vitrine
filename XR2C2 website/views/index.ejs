    // Load the JSON data using d3.json
    d3.json("yourResult.json").then(function (jsonData) {
        // Define the width and height of the SVG container
        var width = 600;
        var height = 400;

        // Append an SVG element to the circle-container
        var svg = d3.select("#tec-container")
            .append("svg")
            .attr("width", width)
            .attr("height", height);

        // Define the size and spacing of the circles
        var circleSize = 50;
        var padding = 10;

        // Create a scale to position the circles
        var xScale = d3.scaleLinear()
            .domain([0, jsonData.length - 1])
            .range([padding, width - padding - circleSize]);

        var yScale = d3.scaleLinear()
            .domain([0, 0]) // We only need one row, as the circles will be placed in a single row
            .range([height / 2 - circleSize / 2, height / 2 - circleSize / 2]);

        // Create a group for each circle and append a background circle and a text element to it
        var circles = svg.selectAll(".circle")
            .data(jsonData)
            .enter()
            .append("g")
            .attr("class", "circle")
            .attr("transform", function (d, i) {
                return "translate(" + xScale(i) + "," + yScale(0) + ")";
            });

        // Add a background circle to each circle to create a rounded circle effect
        circles.append("circle")
            .attr("cx", circleSize / 2)
            .attr("cy", circleSize / 2)
            .attr("r", circleSize / 2)
            .style("fill", "steelblue")
            .style("stroke", "black");

        // Add text inside each circle displaying the project name
        circles.append("text")
            .attr("x", circleSize / 2)
            .attr("y", circleSize + 20)
            .attr("text-anchor", "middle")
            .attr("alignment-baseline", "middle")
            .style("fill", "black")
            .text(function (d) {
                const maxLength = 7; // Set the maximum length of the text
        const name = d["Name"];
        return name.length > maxLength ? name.substring(0, maxLength) + "..." : name;
    });
